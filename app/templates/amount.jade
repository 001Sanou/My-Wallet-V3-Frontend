span(ng-class="{unconfirmed: transaction.confirmations < 3}")
  span(ng-show="transaction.intraWallet")
    button.amount.intra-wallet
      fiat(btc="-transaction.result", ng-hide="btc")
      span(ng-if="btc") {{ -transaction.result | btc }}
  span(ng-show="transaction.result > 0 && !transaction.intraWallet")
    button.amount.received 
      fiat(btc="transaction.result", ng-hide="btc")
      span(ng-if="btc") {{ transaction.result | btc }}
  span(ng-show="transaction.result < 0 && !transaction.intraWallet")
    button.amount.spent 
      fiat(btc="transaction.result", ng-hide="btc")
      span(ng-if="btc") {{ transaction.result | btc }}
