div(ng-class="fullWidth ? 'flex-center' : 'flex'")
  div(ng-class="fullWidth ? 'width-100 flex-center' : 'flex-3'")
    p(ng-class="fullWidth ? 'prl pull-left width-50' : ''", translate="LINK_MOBILE_EXPLAIN")
    .form-group(ng-class="{'has-error': errors.verify}")
      input.form-control(type="text" ng-model="code" ng-disabled="status.busy")
      span.help-block {{ errors.verify }}
    .flex-1(ng-class="fullWidth ? 'mll' : 'mhl'")
      button(ng-class="buttonLg ? 'button-success button-lg' : 'button-primary'" ui-ladda="{{ status.busy }}" ng-click="verifyMobile(code)" ng-disabled="!code || code.length < 3" ladda-translate="VERIFY" data-style="expand-left")
