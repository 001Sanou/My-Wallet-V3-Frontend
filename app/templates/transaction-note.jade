span.note
  img(src="img/note.png", ng-show="transaction.note && !editNote")
  a(ng-click="startEditNote()", ng-hide="transaction.note || editNote").add-note(translate="ADD_NOTE")
  a(ng-hide="editNote", ng-click="startEditNote()"){{ transaction.note }}
  div(ng-show="editNote")
    .input-group
      .input-group-btn
        button.btn.btn-danger.btn-small(ng-click="deleteNote()", ng-show="transaction.note")
          span.glyphicon.glyphicon-trash
      input(type="text").form-control(ng-model="transaction.draftNote")
    button.btn.btn-info.btn-small(ng-click="cancelEditNote()", translate="CANCEL_EDIT_NOTE")
    button.btn.btn-primary.btn-small(ng-click="saveNote()", translate="SAVE_NOTE", ng-hide="transaction.note")
    button.btn.btn-primary.btn-small(ng-click="saveNote()", translate="UPDATE_NOTE", ng-show="transaction.note")
