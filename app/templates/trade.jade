tr.border
  td.paml
    span.state.mrl.state-danger-text(ng-show="completed && error") {{ trade.state | translate }}
    span.state.mrl.success(ng-show="completed && success") Purchased
    span.state.italic.mrl(ng-show="pending") Pending
    span.blue.underline.pointer(ng-click="buy({amt: trade.inAmount, trade: trade});" ng-show="pending") Finish payment
    span.blue.underline.pointer(ng-click="buy({amt: trade.inAmount, trade: trade});" ng-show="completed") View details
  td.paml
    span.type-lbl.mrm {{ trade.createdAt | date:'MM/dd/yyyy @ h:mma' }}
  td.right-align.paml(ng-hide="status.waiting")
    span.type-lbl {{ trade.outAmountExpected }} {{ trade.outCurrency }} | 
    span.type-lbl.em-600 {{ trade.inAmount }} {{ trade.inCurrency }}
    i.ti-trash.pointer.mls.state-danger-text(ng-click="cancel(trade);" ng-show="pending" uib-tooltip="{{'CLICK_TO_CANCEL' | translate}}")
