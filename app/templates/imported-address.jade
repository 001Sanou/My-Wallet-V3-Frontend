tr
  td.shrink
    a(ng-bind-html="address.address | highlight:searchText", ng-click="showAddress(address)")
  td.expand
    span(ng-bind-html="address.label | highlight:searchText", ng-hide="status.edit").prm
    .form-group(ng-class="{'has-error': errors.label}", ng-show="status.edit")
      .col-sm-12
        bc-async-input(inline ng-model="address.label" on-save="changeLabel" on-cancel="cancelEdit" is-required editing)
          span.help-block(ng-show="errors.label") {{::errors.label}}  
    span.float-right(ng-hide="status.edit")
      a(ng-click="status.edit=1")
        i.ti-pencil.prm   
  td.shrink
    span.prm
      span(ng-show="address.balance != null")
        fiat-or-btc(btc="address.balance")
      img(ng-show="address.balance == null" src="img/spinner.gif")
    button.btn-btn-default(ng-hide="address.balance == 0" translate="TRANSFER" ng-click="transfer(address)")
  td.shrink
    a(translate="YOUR_PRIVATE_KEY", ng-hide="address.isWatchOnly", ng-click="showPrivKey(address)")
  td.shrink
    a(translate="ARCHIVE", ng-click="archive(address)")
