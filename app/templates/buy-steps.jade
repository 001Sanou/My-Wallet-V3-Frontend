.buy-steps.flex-row.flex-between.flex-baseline.center(ng-hide="status.loading" ng-click="buy()" ng-class="{'flex-justify': exchangeAcct}")
  .width-20.flex-column.flex-center(ng-class="{blue: onStep('amount'), success: afterStep('amount')}")
    span.type-lrg {{ currencySymbol.symbol }}
    span(ng-show="afterStep('amount')") {{ transaction.fiat | format }} {{ transaction.currency.code }}
    span(ng-show="onStep('amount')" translate="Amount")

  .flex-justify(ng-class="{success: afterStep('amount')}")
    i.ti-arrow-right.type-h4

  .width-20.flex-column.flex-center(ng-class="{blue: afterStep('amount'), success: afterStep('accept-terms')}" ng-hide="exchangeAcct")
    i.type-lrg.ti-user
    span(translate="Account")

  .flex-justify(ng-class="{success: afterStep('accept-terms')}" ng-hide="exchangeAcct")
    i.ti-arrow-right.type-h4

  .width-20.flex-column.flex-center(ng-class="{blue: afterStep('accept-terms'), success: afterStep('trade-formatted') && method.inMedium !== 'bank'}")
    i.type-lrg.ti-credit-card(ng-class="{'bank': method.inMedium === 'bank' || medium === 'bank'}")
    span(ng-show="afterStep('accept-terms') && !medium").capitalize {{ method.inMedium }}
    span(ng-show="afterStep('accept-terms') && medium && medium !== 'bank'").capitalize {{ medium }}
    span.security-red(ng-show="afterStep('accept-terms') && medium === 'bank'" translate="BANK_TRANSFER_PENDING")
    span(ng-hide="afterStep('accept-terms')" translate="Payment")

  .flex-justify(ng-class="{blue: afterStep('trade-formatted'), success: onStep('success'), 'send-red': onStep('pending') && tradeError}")
    i.ti-arrow-right.type-h4

  .width-20.flex-column.flex-center(ng-class="{blue: afterStep('trade-formatted'), success: onStep('success'), 'send-red': onStep('pending') && tradeError}")
    i.type-lrg.ti-shopping-cart
    span(translate="Get Bitcoin")
