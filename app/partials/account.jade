.modal-header
  h3(translate="ACCOUNT")
.modal-body
  form.form-horizontal(role="form",name="form",novalidate)  
    .form-group
      label.col-sm-3.control-label(translate="LANGUAGE")
      .col-sm-7
        ui-select(ng-model="settings.language")
          ui-select-match {{ $select.selected.name }}
          ui-select-choices(repeat="language in languages | filter:$select.search") 
            span(ng-bind-html="language.name | highlight: $select.search")
.modal-footer
  button.btn.btn-info(ng-click="logout()", translate="LOGOUT")
  button.btn.btn-primary(ng-click="close()", translate="CLOSE")
