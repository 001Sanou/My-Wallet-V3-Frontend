.transaction-details
  .row
    .col-xs-12
      a.back(ng-click="back()")
        h4.back Back to feed
  .transaction-card.flex-column.flex
    .tx-date
      strong.prs(translate="TRANSACTION_DETAILS")
        | {{ transaction.txTime * 1000 | date:'MMMM d @ hh:mm a' }}
    .flex
      .tx-details.pal.flex-1
        .tx-sender
          p(translate="FROM")
          strong {{ from }}
        .tx-receiver
          p(translate="TO")
          table
            tr(ng-repeat="destination in destinations")
              td {{ destination.you }}
              td {{ destination.address }}
              td {{ destination.amount }}
        .tx-notes
          p Notes
          transaction-note(transaction="transaction")
      .tx-sidebar.pal
        .tx-amount
          amount(transaction="transaction" btc)
        .tx-status
          transaction-status(transaction="transaction")
        .tx-value-then.tx-value(ng-show="settings.currency.code == 'USD'")
          p Value at Send
          fiat(btc="transaction.result" abs date="transaction.txTime")
        .tx-value-now.tx-value
          p Value now
          fiat(btc="transaction.result" abs)
        .tx-bci-link
          a.button-default.button-sm(ng-href="http://www.blockchain.info/tx/{{ transaction.hash }}", target="_blank") Verify On Blockchain.info
  .transaction-card.clearfix(ng-if="transaction.publicNote")
    strong Public Note:
    p.mtl {{ transaction.publicNote }}
