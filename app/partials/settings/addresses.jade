.row
  .col-xs-12.mbl
    a.flex-center.text.em-400.blue(ng-click="back()")
      i.ti-arrow-left.mrm
      span(translate="BACK")

h5.well.type-h5.em-400.hidden-xs(translate="MY_ADDRESSES_EXPLAIN_TEMP")

.form-ctrl.flex-between.flex-center
  .flex-1.width-100.filter-search-alt.pos-rel
    input(type="text", ng-model="searchText")
    i.ti-search.pos-abs
.row
  .col-xs-12.table-container
    table.responsive.width-100
      tr
        th.shrink(translate="ADDRESS")
        th.expand(translate="LABEL")
        th.shrink
      tr(hd-address="address" search-text="searchText" ng-repeat="address in hdAddresses() | addressOrNameMatch:searchText | orderBy:['index']") 
