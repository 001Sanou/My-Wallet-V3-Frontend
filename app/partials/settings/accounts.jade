h5.well.type-h5.em-400.hidden-xs(translate="ACCOUNT_MANAGEMENT_EXPLAIN")
  
.row.pvl
  .col-xs-6.flex-center
    a.button-primary.mrm.hidden-xs.button-nowrap(ng-click="newAccount()" translate="CREATE_ACCOUNT")
    a.button-default.hidden-xs.button-nowrap(ng-click="transfer(address)"  ng-show="numberOfActiveAccounts() > 1" translate="TRANSFER") (transfer)
  .col-xs-6.flex-center
    .filter-search-alt.width-100.pos-rel.mrm
      input(type="text" ng-model="searchText")
      i.ti-search.pos-abs
        .row
          .col-xs-12.table-container
            
.row
  .col-xs-12
    table.accounts-container
      tr.responsive.width-100(
        ng-repeat="account in accounts() | filter:{archived: false, label: searchText}"
      )
        td.expand
          span.account-label(ng-bind-html="account.label | highlight:searchText")
          span.man(ng-show="account.balance != null").prm
            |  ({{ account.balance | toBitCurrency:settings.btcCurrency }})
          a(ng-click="editAccount(account)")
            i.ti-pencil.prm
          span.label.label-primary(translate="DEFAULT", ng-show="isDefault(account)")
          button.btn.btn-default.btn-xs(translate="MAKE_DEFAULT", ng-click="makeDefault(account)", ng-hide="isDefault(account)")            
        td.shrink
          a(translate="REVEAL_XPUB",      ng-click="revealXpub(account)")
        td.shrink
          a(translate="ARCHIVE",          ng-click="archive(account)", ng-hide="isDefault(account)")
        td.shrink
          button.btn.btn-default(
            ui-sref="wallet.common.settings.accounts_addresses({account: account.index})"
            translate="MANAGE_ADDRESSES"
          )
          
.row
  .col-xs-12        
    table.accounts-container.imported-addresses
      tr.responsive.width-100
        td.expand
          span.account-label(translate="IMPORTED_ADDRESSES")
          span  ({{ getLegacyTotal() | toBitCurrency:settings.btcCurrency }})
        td.shrink        
          button.btn.btn-default(
            ui-sref="wallet.common.settings.imported_addresses"
            translate="MANAGE_ADDRESSES"
          )

.row(ng-show="addressBookPresent")
  .col-xs-12        
    table.accounts-container.imported-addresses
      tr.responsive.width-100
        td.expand
          span.account-label(translate="ADDRESS_BOOK")
        td.shrink        
          button.btn.btn-default(
            ui-sref="wallet.common.settings.address_book"
            translate="MANAGE_ADDRESS_BOOK"
          )
.row
  .col-xs-12
    .mtl
      button.button-default(translate="ARCHIVED_ACCOUNTS", ng-click="display.archived = !display.archived" ng-class="{active : display.archived}")
      p.mtm.hidden-xs(translate="ARCHIVED_ACCOUNTS_EXPLAIN", ng-show="display.archived")

    .row(ng-show="display.archived")
      .col-xs-12.table-container
        table.responsive.width-100
          tr
            th(translate="ACCOUNT_NAME")
            th
          tr(ng-repeat="account in accounts() | filter:{archived: true, label: searchText}")
            td(ng-bind-html="account.label | highlight:searchText")
            td
              a(translate="UNARCHIVE",          ng-click="unarchive(account)")
