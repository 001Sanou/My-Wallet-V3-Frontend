form.form-horizontal(role="form",name="form",novalidate)  
  .form-group
    .col-sm-4
      label(translate="LANGUAGE")
      br
      p(translate="LANGUAGE_EXPLAIN")    
    .col-sm-6
      language-picker(language="settings.language")
  .form-group
    .col-sm-4
      label(translate="CURRENCY")
      br
      p(translate="CURRENCY_EXPLAIN")    
    .col-sm-6
      currency-picker(currency="settings.currency")
  .form-group
    .col-sm-4
      label(translate="NETWORK_FEE")
      br
      p(translate="NETWORK_FEE_EXPLAIN")
    .col-sm-6
      network-fee-picker
  .form-group(ng-show="browserCanHandleBitcoinLinks")
    .col-sm-4
      label(translate="HANDLE_BITCOIN_LINKS")
      br
      p(translate="HANDLE_BITCOIN_LINKS_EXPLAIN")    
    .col-sm-6
      //- h2.status.incomplete(translate="DISABLED", ng-show="!settings.handleBitcoinLinks")
      //- h2.status.complete(translate="ENABLED", ng-show="settings.handleBitcoinLinks")
      a(ng-click="setHandleBitcoinLinks()", translate="SET_HANDLE_BITCOIN_LINKS", ng-hide="settings.handleBitcoinLinks")
      p(translate="HANDLE_BITCOIN_LINKS_STATUS_UNKNOWN")