#signup
  .modal-header
    h3(translate="EMAIL_AND_PASSWORD", ng-show="currentStep == 1")
    h3(translate="SETUP_WALLET", ng-show="currentStep == 2")
    h3(translate="IMPORT_WALLET", ng-show="currentStep == 3")    
    h3(translate="CONFIRM_EMAIL", ng-show="currentStep == 4")  
  .modal-body
    form.form-horizontal(role="form",name="form",novalidate)
      div(ng-switch="currentStep")
        div(ng-switch-when="1")
          .form-group
            // (ng-class="{'has-error': errors.email, 'has-success': success.email}")
            label.col-sm-4.control-label(translate="EMAIL")
            .col-sm-6
              input.form-control(type="email",ng-model="fields.email",autofocus,ng-blur="validate()", ng-focus="errors.email = null")
              span.help-block {{ errors.email }}
          .form-group
            // (ng-class="{'has-error': errors.password, 'has-success': success.password}")
            label.col-sm-4.control-label(translate="NEW_PASSWORD")
            .col-sm-6
              input.form-control(type="password",ng-model="fields.password",autofocus,ng-blur="validate()", ng-focus="errors.password = null")
              span.help-block {{ errors.password }}
          .form-group
            // (ng-class="{'has-error': errors.confirmation, 'has-success': success.confirmation}")
            label.col-sm-4.control-label(translate="CONFIRM_PASSWORD")
            .col-sm-6
              input.form-control(type="password",ng-model="fields.confirmation",autofocus,ng-blur="validate()", ng-focus="errors.confirmation = null")
              span.help-block {{ errors.confirmation }}
        div(ng-switch-when="2")
          .row
            .col-xs-2
              | Balloon
            .col-xs-10
              .form-group
                label(translate="CHOOSE_LANGUAGE")
                language-picker(language="fields.language")
          .row
            .col-xs-2
              | Fiat
            .col-xs-10
              .form-group
                label(translate="CHOOSE_CURRENCY")
                currency-picker(currency="fields.currency")
        div(ng-switch-when="3")
          .form-group
            // (ng-class="{'has-error': errors.email, 'has-success': success.email}")
            label.col-sm-4.control-label(translate="MNEMONIC")
            .col-sm-6
              input.form-control(type="text",ng-model="fields.mnemonic",autofocus, ng-focus="errors.mnemonic = null", ng-disabled="importing")
              span.help-block {{ errors.mnemomic }}
              
        div(ng-switch-when="4")
          p(translate="CONFIRM_EMAIL_EXPLAIN" translate-values='{ email: fields.email}')
          hr
          .why
            p(translate="EMAIL_WHY")
          p.explanation(translate="EMAIL_WHY_EXPLAIN")
      
  .modal-footer
    .row
      .col-xs-6
        a(translate="WALLET_IMPORT", ng-click="import()", ng-show="currentStep==2")
      .col.xs-6
        //- button.btn.btn-info(ng-click="close()", translate="CLOSE", ng-hide="currentStep == 3 || currentStep == 2")
        button.btn.btn-primary(ng-click="nextStep()",ng-disabled="!isValid[0]", translate="NEXT_STEP", ng-show="currentStep == 1 && !working")
        button.btn.btn-primary(ng-click="nextStep()",ng-disabled="!isValid[1]", translate="NEXT_STEP", ng-show="currentStep == 2")
        button.btn.btn-info(ng-click="skipImport()", ng-show="currentStep == 3 && !importing", translate="SKIP_IMPORT")
        button.btn.btn-primary(ng-click="performImport()", ng-disabled="!isValid[2]", translate="IMPORT", ng-show="currentStep == 3 && !working")
        span(ng-show="currentStep == 3")   
        img(ng-show="working" src="img/spinner.gif")     
        button.btn.btn-primary(ng-click="resendEmail()", translate="RESEND_EMAIL", ng-show="currentStep == 4")
