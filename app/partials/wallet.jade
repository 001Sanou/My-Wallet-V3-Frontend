.container-fluid
  .row(ng-hide="status.isLoggedIn")
    .col-md-12
      form.form-horizontal(role="form")
        .form-group
          label.control-label.col-md-1 UID
          .col-md-3
            input.form-control(type="text", ng-model="uid")
        .form-group
          label.control-label.col-md-1 Password
          .col-md-3
            input.form-control(type="password", ng-model="password")
          .col-md-1
            button.btn.btn-primary(ng-click="login()") Login
  .row
    .col-md-12
      ul
        li(ng-repeat="address in addresses | filter:{active:true}")
          {{ address.address }}
  .row(ng-show="status.isLoggedIn")
    .col-md-12
      button.btn.btn-primary(ng-click="generateAddress()") New address