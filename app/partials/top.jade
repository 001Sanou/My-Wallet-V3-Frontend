.sticky-header.flex-center.flex-between#top(ng-show="status.isLoggedIn")
  .button-group.flex
    a.flex-center.flex-justify.mrm(ng-click="request()")
      i.bc-icon-receive
      span(translate="REQUEST")
    a.flex-center.flex-justify(ng-click="send()")
      i.bc-icon-send
      span(translate="SEND")
  .balance.flex-column.flex-align-end
    span(ng-show="getTotal(accountIndex) == null")
      h3
        img(ng-show="balance == null" src="img/spinner.gif") 
    span(ng-show="getTotal(accountIndex) != null")
      span(ng-show="shouldShowFiat()")
        h1
          fiat(btc="getTotal(accountIndex)")
      span(ng-hide="shouldShowFiat()")
        h1(ng-if="btcCurrencyCodeIs('BTC')") {{ getTotal(accountIndex) | btc }}
        h1(ng-if="btcCurrencyCodeIs('mBTC')") {{ getTotal(accountIndex) | mbtc }}
        h1(ng-if="btcCurrencyCodeIs('bits')") {{ getTotal(accountIndex) | bits }}
      p
        fiat(btc="getTotal(accountIndex)", ng-hide="shouldShowFiat()")
        span(ng-show="shouldShowFiat()")
          span(ng-if="btcCurrencyCodeIs('BTC')") {{ getTotal(accountIndex) | btc }}
          span(ng-if="btcCurrencyCodeIs('mBTC')") {{ getTotal(accountIndex) | mbtc }}
          span(ng-if="btcCurrencyCodeIs('bits')") {{ getTotal(accountIndex) | bits }}
