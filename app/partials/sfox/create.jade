.flex-row.flex-column-mobile.mtl
  .width-40
    .width-80
      h4.mtn(translate="SFOX Account")
      span.type-h5.em-300(translate="Please verify your email and phone number to set up your SFOX account.")
  .width-60
    form.bc-form.width-80(name="accountForm" ng-submit="createAccount()" novalidate autocomplete="off")
      fieldset(ng-disabled="locked")
        .group.width-75
          .item(ng-show="state.verifiedEmail")
            label Email Address
            .text
              span We have the following email address for you.
            div
              input.width-80(ng-model="state.email" name="email" required)
              button.button-muted(type="button" ng-show="state.email != user.email" ng-click="changeEmail()") Update
          .item(ng-hide="state.verifiedEmail")
            label Email Address
            .text(ng-hide="state.editEmail")
              span We sent a verification email to 
              b {{state.email}}
              span . Click the verification link to continue.
              |  
              span Didn’t get the email? 
              |  
              span.blue.pointer(ng-click="changeEmail()") Resend 
              | or
              |  
              span.blue.pointer(ng-click="toggleEmail()") change email address.
            //- Verify by Confirmation Code
            //- div
            //-   input.width-80(ng-model="state.confirmEmail" name="confirmEmail" ng-required="!state.verifiedEmail")
            //-   button.button-muted(type="button" ng-show="state.confirmEmail" ng-click="verifyEmail()") Verify
            div(ng-show="state.editEmail")
              input.width-80(ng-model="state.email" name="email" focus-when="state.editEmail" type="email" required)
              button.button-muted(type="button" ng-click="changeEmail()" ng-disabled="accountForm.email.$invalid") Change

        .group.width-75
          .item
            label Phone Number
            .text
              span(ng-show="state.verifiedMobile") We have the following mobile number for you.
              span(ng-hide="state.verifiedMobile") Enter your phone number and we’ll send you a verifcation code via SMS.
            div
              bc-phone-number.width-80(
                ng-model="state.mobile"
                ng-change="state.sentCode=false"
                name="mobile"
                default-country="us"
                preferred-countries="us ca gb au"
                required)
              div(ng-hide="accountForm.mobile.$invalid")
                button.button-muted(
                  type="button"
                  ng-show="state.mobile !== format(user.mobileNumber)"
                  ng-click="changeMobile()") Update
                button.button-muted(
                  type="button"
                  ng-hide="state.sentCode || state.verifiedMobile"
                  ng-click="changeMobile()") Send Code
          .item.mtm(ng-hide="state.verifiedMobile")
            .text
              span Enter verification code sent to your mobile phone.
            div
              input.width-80(ng-model="state.confirmMobile" name="confirmMobile" ng-required="!state.verifiedMobile")
              button.button-muted(type="button" ng-show="state.confirmMobile" ng-click="verifyMobile()") Verify
        .group
          .item.check
            input#terms(type="checkbox" ng-model="state.terms" name="terms" required)
            label(for="terms") I accept SFOX’s Terms of Service and Privacy Policy.
        .group
          button.btn.button-primary.full(type="submit" ng-disabled="accountForm.$invalid || !state.isVerified") Continue
