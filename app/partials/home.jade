.home
  .flex.flex-wrap.mtl
    activity-feed
    .col-md-6.col-sm-12.col-xs-12.col-home.flex-between.flex-column
      .section
        h5.mtn.type-h5.em-400.mbl Account Balances
        ul.pln.account-balances
          li.flex-between.border-bottom-light(ng-repeat="account in activeAccounts")
            span.em-500 {{account.label}}
            fiat-or-btc(btc="account.balance")
          li.flex-between.border-bottom-thick(ng-show="legacyTotal() > 0")
            span.em-400 Imported Addresses
            fiat-or-btc(btc="legacyTotal()")
          li.flex-between.border-bottom-light.ccc
            span Total
            fiat-or-btc(btc="getTotal()")
      .section.mtl
        did-you-know
