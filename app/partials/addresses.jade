div(ng-show="status.isLoggedIn")
  table#accounts-header
    tr
      td My Accounts
      td.right
        a(ng-click="generateAddress()") + NEW
  table#accounts
    tr.active
      td All Accounts
      td.amount {{ totals.fiat | fiat:settings.currency }}
    tr(ng-repeat="address in addresses | filter:{active:true}")
      td 
        a(href="" tooltip-placement="right" tooltip="{{ address.address }}")
          {{ address.name }}
      td.amount {{ address.balance | fiat:settings.currency }}