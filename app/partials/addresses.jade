.left-navigation(ng-show="status.isLoggedIn")
  table.left-header.accounts
    tr
      td.header 
        img(src="img/my-accounts-icon.png") 
        |My Accounts
      td.right
        a(ng-click="generateAddress()") + New
  table#accounts
    tr.active
      td All Accounts
      td.amount {{ totals.fiat | fiat:settings.currency }}
    tr(ng-repeat="address in addresses | filter:{active:true}")
      td 
        a(href="" tooltip-placement="right" tooltip="{{ address.address }}")
          {{ address.name }}
      td.amount {{ address.balance | fiat:settings.currency }}
  table.left-header
    tr
      td.header 
        img(src="img/security-center-icon.png") 
        |Security Center
      td.right
        a
          img(src="img/icon-collapse.png")