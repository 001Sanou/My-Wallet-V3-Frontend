#transactions
  .row
    .col-xs-12
      h2(translate="TRANSACTIONS")
  .row.transaction(ng-repeat="transaction in transactions | filter:transactionFilter | orderBy:'-txTime'")
    .col-xs-3
      a.date(ng-href="http://www.blockchain.info/tx/{{ transaction.hash }}", target="_blank") {{ transaction.txTime | date:'MMMM d @ hh:mm a' }} 
    .col-xs-4.description
      transaction-description(transaction="transaction")
    .col-xs-3 
      span.note(ng-show="transaction.note")
        img(src="img/note.png")
        a(href="", ng-hide="transaction.note").add-note(translate="ADD_NOTE")
        {{ transaction.note }}
    .col-xs-2(confirmations-tooltip="transaction")
      span(ng-show="transaction.intraWallet")
        button.intra-wallet 
          fiat(btc="-transaction.amount")
      span(ng-show="transaction.amount > 0 && !transaction.intraWallet")
        button.received 
          fiat(btc="transaction.amount")
          span(ng-show="transaction.confirmations == 0").glyphicon.glyphicon-warning-sign
      span(ng-show="transaction.amount < 0 && !transaction.intraWallet")
        button.spent 
          | - 
          fiat(btc="-transaction.amount")