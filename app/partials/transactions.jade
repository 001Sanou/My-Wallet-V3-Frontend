#transactions
  .row
    .col-xs-12
      h2(translate="TRANSACTIONS")
  .row.transaction(ng-repeat="transaction in transactions | filter:transactionFilter | orderBy:'-txTime'")
    .col-xs-2
      a.date(ui-sref="wallet.common.transaction({accountIndex: accountIndex, hash: transaction.hash})") {{ transaction.txTime * 1000 | date:'MMMM d @ hh:mm a' }}
    .col-xs-4.description
      transaction-description(transaction="transaction", ng-if="canDisplayDescriptions")
    .col-xs-4
      transaction-note(transaction="transaction")
    .col-xs-2
      amount(transaction="transaction")
  .row
    .col-xs-5
    .col-xs-2
      p(align="center", ng-hide= "loading || allTransactionsLoaded")
        a(in-view="nextPage()", ng-click="nextPage()") Load more...
  .row(ng-show="loading") 
     .col-xs-5
     .col-xs-2
       img(src="img/spinner.gif")
