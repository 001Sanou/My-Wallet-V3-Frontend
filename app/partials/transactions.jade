#transactions
  .row
    .col-xs-12
      h2 Transactions
  .row.transaction(ng-repeat="transaction in transactions | filter:transactionFilter | orderBy:'-txTime'")
    .col-xs-3
      a.date(ng-href="http://www.blockchain.info/tx/{{ transaction.hash }}", target="_blank") {{ transaction.txTime | date:'MMMM d @ hh:mm a' }} 
    .col-xs-4.description
      b You 
      span(ng-show="transaction.intraWallet").
        moved bitcoin to 
      span(ng-show="transaction.to_address")
        | sent bitcoin to 
      span(ng-hide="!transaction.intraWallet && transaction.amount > 0")
          b(ng-show="transaction.to_account")
          | {{ accounts[transaction.to_account].label }}
        b(ng-hide="transaction.to_account")
          b(ng-show="addressBook[transaction.to_address]")
            {{ addressBook[transaction.to_address] }}
          b(ng-hide="addressBook[transaction.to_address]")
            {{ transaction.to_address }}
      span(ng-show="transaction.from_address")
        | received bitcoin from 
        b(ng-show="addressBook[transaction.from_address]")
          {{ addressBook[transaction.from_address] }}
        b(ng-hide="addressBook[transaction.from_address]")
          {{ transaction.from_address }}
    .col-xs-3 
      span.note
        img(src="img/note.png")
        a(href="", ng-hide="transaction.note").add-note Add note
        {{ transaction.note }}
    .col-xs-2
      span(ng-show="transaction.intraWallet")
        button.intra-wallet {{ settings.currency.symbol }} {{ -transaction.fiat | number:2 }}
      span(ng-show="transaction.amount > 0 && !transaction.intraWallet")
        button.received {{ settings.currency.symbol }} {{ transaction.fiat | number:2 }}
      span(ng-show="transaction.amount < 0 && !transaction.intraWallet")
        button.spent -{{ settings.currency.symbol }} {{ -transaction.fiat | number:2 }}