.buy-sell
  .flex-center.flex-justify(ng-if="status.loading") Fetching information from your exchange partner.
  div(ng-if="!status.loading")
    .flex-row.flex-column-tablet
      .flex-column.width-50.mrl
        h4.blue.type-h4(translate="Quick Start" ng-click="buy()")
        buy-steps.pointer(buy="buy()"
                          exchange-acct="userHasExchangeAcct"
                          currency-symbol="currencySymbol"
                          profile="profile"
                          partner="partner")
        buy-quick-start(transaction="transaction" 
                        change-currency="changeCurrency(currency)"
                        buy="buy(amt)")
      .flex-column.width-50.mll(ng-hide="userHasExchangeAcct")
        h4.type-h4.mbm(translate="How does it work?")
        p.mbn.flex-center
          span.type-h5.mrs ðŸ’°
          span(translate="Choose how much you want to buy.")
        p.mbn.flex-center
          span.type-h5.mrs ðŸ’³
          span(translate="Tell us how you want to pay.")
        p.mbn.flex-center
          span.type-h5.mrs ðŸ˜Œ
          span(translate="We'll do the rest for you.")
        .height-100
          .flex-column.mtl
            p.flex-center.mbs
              i.type-lrg.ti-check-box.blue.mrs 
              span.type-h5(translate="Simple: 4 Easy Steps")
            p.flex-center.mbs
              i.type-lrg.ti-check-box.blue.mrs 
              span.type-h5(translate="Fast: Instant Exchange")
            p.flex-center.mbs
              i.type-lrg.ti-check-box.blue.mrs 
              span.type-h5(translate="Secure: Encrypted Communication")
          button.button-primary.mtm(translate="Get Started" ng-click="buy()")
    .flex-column.mtl(ng-show="trades.pending || trades.completed")
      div(ng-show="trades.pending.length")
        h4.type-h4(translate="Pending")
        table.width-100.border.mbvl
          th.ptm.plm.pbn Date
          th.ptm.pbn Amount
          th.ptm.pbn Status
          tr(ng-repeat="trade in trades.pending" trade="trade" buy="buy(amt, trade)" pending="true")
      div(ng-show="trades.completed.length")
        h4.type-h4(translate="History")
        table.width-100.border.mbvl
          th.ptm.plm.pbn Date
          th.ptm.pbn Amount
          th.ptm.pbn Status
          tr(ng-repeat="trade in trades.completed" trade="trade")
